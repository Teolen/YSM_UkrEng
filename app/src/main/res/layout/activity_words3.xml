<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCount31"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="N1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvHead3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="ГРАМАТИКА"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvCount32"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0/0"
                android:textAlignment="center" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    <TextView
        android:id="@+id/tvQuest31"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="10dp"
        android:text="I ____ going to school"
        android:textAlignment="viewStart"
        android:textColor="#E4000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvQuest32"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="10dp"
        android:text="(Я йду до школи)"
        android:textColor="#E4000000"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bAnsw31"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#C8C8C8"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bAnsw32"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#C8C8C8"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bAnsw33"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#C8C8C8"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bAnsw34"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#C8C8C8"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:textSize="20sp"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

        <Button
            android:id="@+id/bNext3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#C8C8C8"
            android:text="ДАЛІ"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>